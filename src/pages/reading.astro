---
import { Card } from '@components/card';
import Base from '@layouts/base.astro';
import { getReadingData } from '@utils/content';

const readingData = await getReadingData();
---

<Base>
  <main>
    <h1>Things I've been reading</h1>
    <div class="reading-cards">
      {readingData.map((reading) => <Card {...reading.data} />)}
    </div>
  </main>
</Base>

<style>
  main {
    max-width: 1024px;
    width: 100%;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

    @media (max-width: 684px) {
      padding: 2rem 1rem;
    }
  }

  h1 {
    margin: 0.5rem;
    text-align: left;
    font-size: 2.5rem;

    @media (max-width: 684px) {
      font-size: 2rem;
    }
  }

  .reading-cards {
    display: grid;
    grid-template-columns: repeat(2, minmax(320px, 1fr));
    gap: 1.5rem;
    width: 100%;
    justify-content: center;
    align-items: stretch;
    grid-auto-rows: 1fr;

    @media (max-width: 684px) {
      grid-template-columns: minmax(0, min(100%, 28rem));
      justify-content: center;
      gap: 1.25rem;
    }
  }
</style>
