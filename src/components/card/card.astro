---
import { Image } from 'astro:assets';
import { getYearFromDate } from '@utils/date';

const { title, author, cover, link, status, tags, finishedDate } = Astro.props;
const statusText = () => {
  switch (status) {
    case 'Finished':
      return `Read in ${getYearFromDate(finishedDate)}`;
    case 'Reading':
      return 'Currently Reading';
    case 'To Read':
      return 'To Read';
  }
};
---

<div class="card">
  <div class="cover-container">
    <Image src={cover} alt={title} width={400} height={600} loading="eager" />
  </div>
  <div class="card-content">
    <div>
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="title-link"
      >
        <h2>{title}</h2>
      </a>
      <p class="author">{author}</p>
      {
        status && (
          <p class={`status status-${status.toLowerCase().replace(' ', '-')}`}>
            {statusText()}
          </p>
        )
      }
    </div>
    <div class="card-meta">
      <div class="tags">
        {tags.map((tag: string[]) => <span class="tag">{tag}</span>)}
      </div>
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="read-more-btn"
      >
        Read more â†’
      </a>
    </div>
  </div>
</div>

<style>
  :root {
    --card-background: #ffffff;
    --card-border: #0f172a14;
    --card-shadow:
      0 1px 2px #0f172a14, 0 4px 12px #0f172a0a, 0 0 0 1px #0f172a0a;
    --button-background: #f8fafc;
    --button-border: #0f172a1f;
    --button-shadow: 0 1px 2px #0f172a14, 0 0 0 1px #0f172a0a;
    --button-color: #666;
    --button-hover-background: #efefef;
    --button-hover-color: #1c1d1d;
    --tag-bg: #eff4ff;
    --tag-border: #b4c8ff;
    --tag-color: #1c3faa;
    --tag-shadow: inset 0 1px 0 #ffffffcc;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --card-background: #252933;
      --card-border: rgba(148, 163, 184, 0.2);
      --card-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
      --button-background: #3b3f4a;
      --button-border: #3b3f4a;
      --button-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      --button-color: #94a3b8;
      --button-hover-background: #95979b;
      --button-hover-color: #f8fafc;
      --tag-bg: #1e3a5f;
      --tag-border: #3b5c8a;
      --tag-color: #bdd4f7;
      --tag-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
      --status-finished: #34d399;
      --status-reading: #60a5fa;
      --status-to-read: #94a3b8;
    }
  }

  :root[data-theme='dark'] {
    --card-background: #252933;
    --card-border: rgba(148, 163, 184, 0.2);
    --card-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    --button-background: #3b3f4a;
    --button-border: #555555;
    --button-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    --button-color: #94a3b8;
    --button-hover-background: #4a5060;
    --button-hover-color: #f8fafc;
    --tag-bg: #1e3a5f;
    --tag-border: #3b5c8a;
    --tag-color: #bdd4f7;
    --tag-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
    --status-finished: #34d399;
    --status-reading: #60a5fa;
    --status-to-read: #94a3b8;
  }

  :root[data-theme='light'] {
    --card-background: #ffffff;
    --card-border: #0f172a14;
    --card-shadow:
      0 1px 2px #0f172a14, 0 4px 12px #0f172a0a, 0 0 0 1px #0f172a0a;
    --button-background: #fafafa;
    --button-border: #0f172a1f;
    --button-shadow: 0 1px 2px #0f172a14, 0 0 0 1px #0f172a0a;
    --button-color: #666;
    --button-hover-background: #efefef;
    --button-hover-color: #0f172a;
    --tag-bg: #eff4ff;
    --tag-border: #b4c8ff;
    --tag-color: #1c3faa;
    --tag-shadow: inset 0 1px 0 #ffffffcc;
    --status-finished: #059669;
    --status-reading: #2563eb;
    --status-to-read: #64748b;
  }

  .card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    background-color: var(--card-background);
    padding: 1.5rem;
    border: 1px solid var(--card-border);
    border-radius: 1rem;
    box-shadow: var(--card-shadow);
    transition: box-shadow 0.25s ease;
    height: 100%;

    @media (min-width: 1024px) {
      flex-direction: row;
      align-items: flex-start;
      gap: 1.5rem;
      padding: 1.5rem 1.75rem;
    }
  }

  .cover-container {
    width: min(100%, 320px);
    max-width: 320px;
    aspect-ratio: 2 / 3;
    overflow: hidden;
    border-radius: 0.5rem;
    flex-shrink: 0;
    background-color: var(--card-background);
    display: block;
    margin: 0 auto;

    @media (min-width: 1024px) {
      width: 12rem;
      max-width: none;
      margin: 0;
    }
  }

  .cover-container picture,
  .cover-container img {
    width: 100% !important;
    height: 100% !important;
    display: block;
    object-fit: cover;
    object-position: center;
    margin: 0;
    border-radius: inherit;
    transition: transform 0.3s ease;
  }

  .card:hover .cover-container img {
    transform: scale(1.01);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
    align-items: flex-start;
    flex: 1;

    @media (min-width: 1024px) {
      flex: 1;
      padding: 0.25rem 0;
      height: 100%;
    }
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.025em;
    margin: 0;
    line-height: 1.3;
    text-align: left;
    color: var(--color);
  }

  .title-link {
    text-decoration: none;
  }

  .title-link:hover {
    text-decoration: underline;
  }

  .author {
    font-size: 0.875rem;
    color: var(--color-secondary);
    margin: 0 0 0.75rem 0;
    font-weight: 400;
    text-align: left;
  }

  .status {
    font-size: 0.75rem;
    font-weight: 800;
    font-style: italic;
    margin: 0.25rem 0 0 0;
    text-align: left;
    letter-spacing: 0.025em;
  }

  .status-finished {
    color: var(--status-finished);
  }

  .status-reading {
    color: var(--status-reading);
  }

  .status-to-read {
    color: var(--status-to-read);
  }

  .card-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: auto;
    width: 100%;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.25rem;
  }

  .tag {
    background-color: var(--tag-bg);
    color: var(--tag-color);
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    border: 1px solid var(--tag-border);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    box-shadow: var(--tag-shadow);
  }

  .read-more-btn {
    display: inline-flex;
    align-items: center;
    align-self: flex-start;
    gap: 0.25rem;
    padding: 0.5rem 1rem;
    color: var(--button-color);
    background-color: var(--button-background);
    font-size: 0.875rem;
    font-weight: 500;
    line-height: 1.25rem;
    text-decoration: none;
    border: 1px solid var(--button-border);
    border-radius: 0.5rem;
    box-shadow: var(--button-shadow);
  }

  .read-more-btn:hover {
    background-color: var(--button-hover-background);
    color: var(--button-hover-color);
    box-shadow: var(--button-shadow);
  }

  .read-more-btn:focus-visible {
    outline: 2px solid rgba(62, 176, 239, 0.6);
    outline-offset: 2px;
  }
</style>
