---
import { Image } from 'astro:assets';

const { title, author, cover, description, link, tags } = Astro.props;
---

<div class="card">
  <div class="cover-container">
    <Image src={cover} alt={title} width={400} height={600} loading="eager" />
  </div>
  <div class="card-content">
    <div>
      <h2>{title}</h2>
      <p class="author">{author}</p>
    </div>
    <p class="description">{description}</p>
    <div class="card-meta">
      <div class="tags">
        {tags.map((tag: string[]) => <span class="tag">{tag}</span>)}
      </div>
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="read-more-btn"
      >
        Read more
        <svg
          class="arrow-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 12H5m14 0-4 4m4-4-4-4"></path>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  :root {
    --card-background: #ffffff;
    --card-border: #0f172a14;
    --card-shadow:
      0 1px 2px #0f172a14, 0 4px 12px #0f172a0a, 0 0 0 1px #0f172a0a;
    --button-background: #f8fafc;
    --button-border: #0f172a1f;
    --button-shadow: 0 1px 2px #0f172a14, 0 0 0 1px #0f172a0a;
    --button-color: #666;
    --button-hover-background: #efefef;
    --button-hover-color: #0f172a;
    --tag-pill-bg: #eff4ff;
    --tag-pill-border: #b4c8ff;
    --tag-pill-color: #1c3faa;
    --tag-pill-shadow: inset 0 1px 0 #ffffffcc;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --card-background: #252933;
      --card-border: rgba(148, 163, 184, 0.2);
      --card-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
      --button-background: #3b3f4a;
      --button-border: #3b3f4a;
      --button-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      --button-color: #94a3b8;
      --button-hover-background: #95979b;
      --button-hover-color: #f8fafc;
      --tag-pill-bg: #1e3a5f;
      --tag-pill-border: #3b5c8a;
      --tag-pill-color: #bdd4f7;
      --tag-pill-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
  }

  :root[data-theme='dark'] {
    --card-background: #252933;
    --card-border: rgba(148, 163, 184, 0.2);
    --card-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    --button-background: #3b3f4a;
    --button-border: #555555;
    --button-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    --button-color: #94a3b8;
    --button-hover-background: #4a5060;
    --button-hover-color: #f8fafc;
    --tag-pill-bg: #1e3a5f;
    --tag-pill-border: #3b5c8a;
    --tag-pill-color: #bdd4f7;
    --tag-pill-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  :root[data-theme='light'] {
    --card-background: #ffffff;
    --card-border: #0f172a14;
    --card-shadow:
      0 1px 2px #0f172a14, 0 4px 12px #0f172a0a, 0 0 0 1px #0f172a0a;
    --button-background: #fafafa;
    --button-border: #0f172a1f;
    --button-shadow: 0 1px 2px #0f172a14, 0 0 0 1px #0f172a0a;
    --button-color: #666;
    --button-hover-background: #efefef;
    --button-hover-color: #0f172a;
    --tag-pill-bg: #eff4ff;
    --tag-pill-border: #b4c8ff;
    --tag-pill-color: #1c3faa;
    --tag-pill-shadow: inset 0 1px 0 #ffffffcc;
  }

  .card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    background-color: var(--card-background);
    padding: 1.5rem;
    border: 1px solid var(--card-border);
    border-radius: 1rem;
    box-shadow: var(--card-shadow);
    transition: box-shadow 0.25s ease;
    height: 100%;
  }

  .cover-container {
    width: min(100%, 320px);
    max-width: 320px;
    aspect-ratio: 2 / 3;
    overflow: hidden;
    border-radius: 0.5rem;
    flex-shrink: 0;
    background-color: var(--card-background);
    display: block;
    margin: 0 auto;
  }

  .cover-container picture,
  .cover-container img {
    width: 100% !important;
    height: 100% !important;
    display: block;
    object-fit: cover;
    object-position: center;
    margin: 0;
    border-radius: inherit;
    transition: transform 0.3s ease;
  }

  .card:hover .cover-container img {
    transform: scale(1.01);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
    align-items: flex-start;
    flex: 1;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.025em;
    margin: 0;
    line-height: 1.3;
    text-align: left;
    color: var(--color);
  }

  .author {
    font-size: 0.875rem;
    color: var(--color-secondary);
    margin: 0 0 0.75rem 0;
    font-weight: 400;
    text-align: left;
  }

  .description {
    margin: 0 0 1rem 0;
    color: var(--color-secondary);
    font-size: 1rem;
    line-height: 1.5;
  }

  .card-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: auto;
    width: 100%;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.25rem;
  }

  .tag {
    background-color: var(--tag-pill-bg);
    color: var(--tag-pill-color);
    padding: 0.3rem 0.75rem;
    border-radius: 999px;
    border: 1px solid var(--tag-pill-border);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    box-shadow: var(--tag-pill-shadow);
  }

  .read-more-btn {
    display: inline-flex;
    align-items: center;
    align-self: flex-start;
    gap: 0.35rem;
    color: var(--button-color);
    background-color: var(--button-background);
    border: 1px solid var(--button-border);
    font-weight: 500;
    line-height: 1.25rem;
    border-radius: 0.75rem;
    font-size: 0.875rem;
    padding: 0.55rem 1.2rem;
    text-decoration: none;
    box-shadow: var(--button-shadow);
  }

  .read-more-btn:hover {
    background-color: var(--button-hover-background);
    color: var(--button-hover-color);
    box-shadow: var(--button-shadow);
  }

  .arrow-icon {
    width: 1rem;
    height: 1rem;
    transition: transform 0.25s ease;
    color: inherit;
  }

  .read-more-btn:focus-visible {
    outline: 2px solid rgba(62, 176, 239, 0.6);
    outline-offset: 2px;
  }

  @media (min-width: 1024px) {
    .card {
      flex-direction: row;
      align-items: flex-start;
      gap: 1.5rem;
      padding: 1.5rem 1.75rem;
    }

    .cover-container {
      width: 12rem;
      max-width: none;
      margin: 0;
    }

    .card-content {
      flex: 1;
      padding: 0.25rem 0;
      height: 100%;
    }
  }
</style>
